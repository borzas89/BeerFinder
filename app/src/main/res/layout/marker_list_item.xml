<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="android.view.View"/>
    </data>

<RelativeLayout
        android:id="@+id/markerItemLayout"
        android:background="@color/grey_darker"
        android:layout_width="160dp"
        android:layout_marginBottom="@dimen/medium_margin"
        android:padding="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/markerImage"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@mipmap/ic_launcher"
            android:transitionName="image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />


        <TextView
            android:id="@+id/titleText"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/markerImage"
            android:paddingLeft="@dimen/small_margin"
            android:paddingTop="@dimen/small_margin"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:text="Best Pub" />


        <TextView
            android:id="@+id/addressText"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/markerImage"
            android:paddingLeft="@dimen/small_margin"
            android:paddingTop="@dimen/small_margin"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/purple"
            tools:text="Budapest...." />

        <TextView
            android:id="@+id/descriptionText"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressText"
            android:layout_alignParentLeft="true"
            tools:text="description" />
    </RelativeLayout>
</layout>